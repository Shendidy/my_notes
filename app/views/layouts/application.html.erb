<!DOCTYPE html>
<html>
  <head>
    <title>MyNotes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <p>Hello <%= current_user.email.split('@')[0].capitalize %> - <small><%= link_to "Create new note", new_note_path %> - <small><%= link_to "Create new category", new_category_path %></small> | <%= link_to 'Log out', destroy_user_session_path, method: :delete %> </p>
    <% end %>
    <%= render 'layouts/alerts' %>
    <%= yield %>
  </body>
</html>
